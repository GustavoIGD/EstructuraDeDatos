Cabecera de la clase

#pragma once
#include <string>
using namespace std;

class Mensaje
{
private:
	//Datos
	string mens;
public:
	//Constructor - Metodos
	Mensaje();
	void mostrar();
};

La implementacion de la clase

#include "Mensaje.h"
#include<iostream>
using namespace std;

//Constructor - Metodos
Mensaje::Mensaje() {
	mens = "Gustavo";
}
void Mensaje::mostrar() {
	cout << mens;
}

Main del Programa

#include <iostream>
#include "Mensaje.h"
using namespace std;

int main()
{
	Mensaje mensajito;
	cout << "Mi nombre es: ";
	mensajito.mostrar();
}
